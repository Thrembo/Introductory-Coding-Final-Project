            VQuestion = int(input('How many voltage sources will you be working with? (1-4)\n'))
        except:
            print('Please enter a number 1-4')
        if VQuestion == 1:
            try:
                V1 = float(input('Please input the value for V1:\n'))
                V2 = 0
                V3 = 0
                V4 = 0
            except:
                print('Please input a number.\n')
                time.sleep(1)
                FinalCalc()

